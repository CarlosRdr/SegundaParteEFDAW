@model IEnumerable<EF_Practice.Modelo>
@using EF_Practice;
@{
    List<Marca> ListaMarca = (List<Marca>)ViewBag.ListadoMarca;
}
<p>
    @Html.ActionLink("Agregar Nuevo Modelo", "Crear")
</p>

<table class="table" id="tbModelo">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Puertas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            Marca
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <label>  @Html.DisplayFor(modelItem => item.Descripcion)</label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puertas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @foreach (Marca item2 in ListaMarca.Where(x => x.CodMarca == item.CodMarca).ToList())
                {
                    @item2.Descripcion

                }



                @*@Html.DisplayFor(modelItem => item.Marca.CodMarca)*@
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.CodModelo }) |
                @* @Html.ActionLink("Details", "Details", new { id=item.CodModelo }) |*@
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.CodModelo })
            </td>
        </tr>
    }

</table>
<script>
    $('#tbModelo').DataTable();
</script>