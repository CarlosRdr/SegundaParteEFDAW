@model IEnumerable<EF_Practice.Vehiculo>
@using EF_Practice;
@{
    List<Modelo> listaModelo = (List<Modelo>)ViewBag.listadoModelo;
}

<p>
    @Html.ActionLink("Nuevo Vehiculo", "Crear")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Placa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disponible)
        </th>
        <th>
            Modelo
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <label>  @Html.DisplayFor(modelItem => item.Descripcion)</label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Placa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponible)
            </td>
            <td>
                @foreach (Modelo item2 in listaModelo.Where(x => x.CodModelo == item.CodModelo).ToList())
                {
                    @item2.Descripcion
                }
                @*@Html.DisplayFor(modelItem => item.Modelo.Descripcion)*@
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.CodVehiculo }) |
                @*@Html.ActionLink("Details", "Details", new { id=item.CodVehiculo }) |*@
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.CodVehiculo })
            </td>
        </tr>
    }

</table>

<script>
    $('#tbModelo').DataTable();
</script>
